<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:colorBackground">?colorPrimaryDark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryDark</item>

        <!--         Customize your theme here.-->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="android:editTextColor">?colorOnSecondary</item>
    </style>





    <!--    TextAppearance-->

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextAppearance.App.navigation" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--   CardView theme overlay-->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <!-- checkBox theme -->

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/colorOnSecondary</item>
        <item name="colorSecondary">?colorSecondaryVariant</item>
    </style>


    <!--   Edit  text fields-->

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
       <item name="boxStrokeWidth">3dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSecondary</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>


    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="TextLabels.App" parent="">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="splash_screen" parent="Theme.ToDoList">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>